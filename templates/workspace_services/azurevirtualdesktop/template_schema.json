{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/microsoft/AzureTRE/templates/workspace_services/avd/template_schema.json",
  "type": "object",
  "title": "Azure Virtual Desktop Host Pool",
  "description": "Azure Virtual Desktop Host Pool",
  "required": [],
  "authorizedRoles": [
    "WorkspaceOwner",
    "WorkspaceResearcher"
  ],
  "properties": {
  },
  "pipeline": {
    "install": [
      {
        "stepId": "main"
      },
      {
        "stepId": "4843f242-b451-42f9-a22d-2b7241354405",
        "stepTitle": "Add network firewall rules for guacamole",
        "resourceTemplateName": "tre-shared-service-firewall",
        "resourceType": "shared-service",
        "resourceAction": "upgrade",
        "properties": [
          {
            "name": "network_rule_collections",
            "type": "array",
            "arraySubstitutionAction": "replace",
            "arrayMatchField": "name",
            "value": {
              "name": "nrc_svc_test_guacamole",
              "action": "Allow",
              "rules": [
                {
                  "name": "AzureAD",
                  "description": "AAD access for authNZ",
                  "source_addresses": ["10.0.0.0"],
                  "destination_addresses": [
                    "AzureActiveDirectory"
                  ],
                  "destination_ports": [
                    "*"
                  ],
                  "protocols": [
                    "TCP"
                  ]
                }
              ]
            }
          }
        ]
      }
    ]
  }
}
